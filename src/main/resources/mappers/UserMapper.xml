<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mybatisgenerator.crud.biz.dao.user">

    <select id="findOneById" useCache="true" resultType="com.mybatisgenerator.crud.biz.dto.user.UserDTO">
        select * from users where id = #{id};
    </select>
    <select id="findAll" useCache="true" resultType="com.mybatisgenerator.crud.biz.dto.user.UserDTO">
        select * from users as user
        <where>
            <if test="keywords == null">
                true
            </if>
            <if test="keywords != null">
                LOWER(user.description) LIKE LOWER(concat('%', #{keywords}, '%'))
            </if>
        </where>
        LIMIT #{page.pageSize} OFFSET #{page.offset}
    </select>
    <select id="count" useCache="true" resultType="java.lang.Integer">
        select count(user.id) from users as user
        <where>
            <if test="keywords == null">
                true
            </if>
            <if test="keywords != null">
                LOWER(user.description) LIKE LOWER(concat('%', #{keywords}, '%'))
            </if>
        </where>
        LIMIT #{page.pageSize} OFFSET #{page.offset}
    </select>

    <insert id="insert" keyProperty="true">
        INSERT INTO users
        (
            id,
            description
        )
        VALUES
        (
            #{id},
            #{description}
        );
    </insert>
    <update id="update" flushCache="true">
        UPDATE users SET description=#{description} WHERE id = #{id}
    </update>
    <delete id="delete" flushCache="true">
        DELETE FROM users WHERE id = #{id}
    </delete>

</mapper>